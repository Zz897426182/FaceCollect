<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>All</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>../Ftp/bin</directory>
            <fileMode>0755</fileMode>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../Ftp/target/collect-ftp-${project.parent.version}/bin</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../Ftp/target/collect-ftp-${project.parent.version}/lib</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../Ftp/target/collect-ftp-${project.parent.version}/conf</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>conf</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <!--把间接依赖的jar 也包含进来 -->
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <!--是否解压 -->
            <unpack>false</unpack>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>